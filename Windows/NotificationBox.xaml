<Window x:Class="AemulusModManager.NotificationBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AemulusModManager"
        mc:Ignorable="d"
        Title="Aemulus Package Manager" Height="175" Width="450"
        ResizeMode="NoResize"
        Background="#121212" ShowActivated="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.75*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Notification" Padding="20" Foreground="White" TextAlignment="Center" VerticalAlignment="Center" TextWrapping="WrapWithOverflow" FontSize="15"/>
        <Button Content="OK" Background="White" Height="25" Width="80" VerticalAlignment="Center" HorizontalAlignment="Right" Click="Button_Click" IsDefault="True" Grid.Row="1" Margin="0,14,22,14"/> 
    </Grid>
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo x:Name="taskBarItem"/>
    </Window.TaskbarItemInfo>
</Window>
